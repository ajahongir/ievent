!!!
%html
  %head
    %title Ievent
    = stylesheet_link_tag "application"
    = javascript_include_tag "application"
  
    %link{:rel => 'stylesheet', :type => 'text/css', :href => '/assets/fullcalendar-1.5.3/fullcalendar/fullcalendar.css'}
    %link{:rel => 'stylesheet', :type => 'text/css', :href => '/assets/fullcalendar-1.5.3/fullcalendar/fullcalendar.print.css', :media => 'print'}
    %link{:rel => 'stylesheet', :type => 'text/css', :href => '/assets/fullcalendar-1.5.3/jquery/css/smoothness/jquery-ui-1.8.18.custom.css'}
    %link{:rel => 'stylesheet', :type => 'text/css', :href => '/assets/tipsy/src/stylesheets/tipsy.css'}

    %script{:src => '/assets/fullcalendar-1.5.3/jquery/jquery-1.7.1.min.js', :type => 'text/javascript'}
    %script{:src => '/assets/fullcalendar-1.5.3/jquery/jquery-ui-1.8.18.custom.min.js', :type => 'text/javascript'}
    %script{:src => '/assets/fullcalendar-1.5.3/fullcalendar/fullcalendar.min.js', :type => 'text/javascript'}
    %script{:src => '/assets/tipsy/src/javascripts/jquery.tipsy.js', :type => 'text/javascript'}

    = csrf_meta_tags
  %body

    #user_nav
      - if user_signed_in?
        Signed in as 
        = link_to current_user.name, edit_user_registration_path(current_user)
        |
        = link_to "Sign out", destroy_user_session_path, :method => :delete
      - else
        = link_to "Sign up", new_user_registration_path 
        or 
        = link_to "sign in", new_user_session_path
    

    %p.notice 
      = notice
    %p.alert 
      = alert

    = yield

    %script{:type => 'text/javascript'}
      $('.live-tipsy').tipsy({live: true, gravity: 'w'});